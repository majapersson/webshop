@model SnackShop.Core.Models.CartModel
@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

<div class="card">
<div class="card-body">
<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Qty</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in @Model.Items)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Qty</td>
                <td>@product.Price kr</td>
            </tr>
        }
        <tr>
            <td></td>
            <td>Total</td>
            <td><strong>@Model.GetTotals() kr</strong></td>
        </tr>
    </tbody>
</table>

<h3>Customer information</h3>

@using (Html.BeginForm("order", "checkout", FormMethod.Post))
{
  <input type="hidden" name="cartId" value="@Model.Id" />
  <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control w-25" name="name" />
  </div>
  <div class="form-group">
    <label for="street">Street</label>
    <input type="text" class="form-control w-25" name="street" />
  </div>
  <div class="form-group">
    <label for="zipcode">Zipcode</label>
    <input type="text" class="form-control w-25" name="zipcode" />
  </div>
  <div class="form-group">
    <label for="city">City</label>
    <input type="text" class="form-control w-25" name="city" />
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control w-25" name="email" />
  </div>
  <div class="form-group">
    <label for="phone">Phone number</label>
    <input type="tel" class="form-control w-25" name="phone" />
  </div>
  <a href="/cart" class="btn btn-danger">Back to cart</a>
  <button type="submit" class="btn btn-success">Place Order</button>
}

</div>
</div>
