@model List<SnackShop.Core.Models.ProductModel>
@{
    ViewData["Title"] = "Admin";
}

<h2>Snacks</h2>

<div class="card">
<div class="card-body">
<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in @Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price kr</td>
                <td><a href="/admin/edit/@product.Slug" class="btn btn-sm btn-outline-success">Edit</a></td>
                <td><button class="btn btn-sm btn-outline-danger">Delete</button></td>
            </tr>
        }
    </tbody>
</table>

<a href="/admin/add" class="btn btn-success">Add Snack</a>
</div>
</div>
